@page "/buttontest"
@page "/buttons"


<h3>@title</h3>

<div class="form-group">

	<div class="container">
		<div class="btn-toolbar">

			<CustomEditButtonComponent OnClick="changeTitle" />

			<CustomEditButtonComponent OnClick="showConfirmation" Caption="Edit Caption" Color="danger" Icon="pencil" IsSmall="false"/>



		</div>
	</div>

</div>

@code {

	[CascadingParameter]
	IModalService Modal { get; set; }

	[Inject]
	ModalManager ModalManager { get; set; }

	private String title = "";

	private async Task changeTitle()
	{
		await ModalManager.ShowMessageAsync("Selam kardeş","kayıt silindi lan",3000);
	}

	private async Task showConfirmation()
	{
		var res = await ModalManager.ConfirmationAsync("Selam kardeş", "kayıt silindi lan");
		if (res) title = "Yes jush clicked"; else title = "No just clicked";
	}
}
